{
  "name": "vovk-plc-runtime",
  "version": "1.0.0",
  "description": "VovkPLC Runtime Library",
  "type": "module",
  "scripts": {
    "build": "node wasm/wasm_build.js",
    "build-safe": "node wasm/wasm_build.js --safe",
    "compile": "node --no-warnings wasm/node-test/compile.js",
    "explain": "node --no-warnings wasm/node-test/explain.js",
    "analyze": "node --no-warnings wasm/node-test/analyze.js",
    "update": "git pull",
    "wasm_unit_test": "cd wasm/node-test && node unit_test.js",
    "test_timers": "cd wasm/node-test && node test_timers.js",
    "test_worker_full": "cd wasm/node-test && node test_worker_full.js",
    "test_project": "node wasm/node-test/project-tests/unit_test.js",
    "test_ladder": "node --no-warnings wasm/node-test/ladder-tests/test_ladder_stl.js",
    "test_ladder_linter": "node wasm/node-test/ladder-tests/test_ladder_linter.js",
    "test_plcscript": "node --no-warnings wasm/node-test/stl-tests/test_plcscript.js",
    "test_st": "node --no-warnings wasm/node-test/st-tests/test_st.js",
    "test_safe_mode": "node --no-warnings wasm/node-test/test_safe_mode.js",
    "test_adjacency_warnings": "node --no-warnings wasm/node-test/test_adjacency_warnings.js",
    "test_arrays": "node --no-warnings wasm/node-test/test_arrays.js",
    "test_readme_api": "node --no-warnings wasm/node-test/test_readme_api.js",
    "test_system_time": "node --no-warnings wasm/node-test/test_system_time.js",
    "test_type_inference": "node --no-warnings wasm/node-test/plcscript-tests/test_plcscript_type_inference.js",
    "memory_leak_test": "node wasm/memory_leak_test.js",
    "memory_leak_test:verbose": "node wasm/memory_leak_test.js --verbose",
    "test": "node --no-warnings wasm/unit_test.js",
    "test:verbose": "node --no-warnings wasm/unit_test.js --verbose",
    "test:debug": "node --no-warnings wasm/unit_test.js --debug",
    "test:all": "npm run test_ladder && npm run test_ladder_linter && npm run test_project && npm run test_plcscript && npm run test_st && npm run test_safe_mode"
  },
  "keywords": [
    "plc",
    "arduino",
    "wasm"
  ],
  "author": "J.Vovk <jozo132@gmail.com>",
  "license": "GPL-3.0-or-later"
}
